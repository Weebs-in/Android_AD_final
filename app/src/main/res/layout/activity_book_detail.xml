<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.BookDetailActivity">

    <ImageView
        android:id="@+id/book_cover_background_book_detail"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:adjustViewBounds="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/book" />

    <ImageView
        android:id="@+id/back_img_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_new_24" />

    <TextView
        android:id="@+id/book_title_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Harry Potter and the Order of the Phoenix"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        app:fontFamily="sans-serif-black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_cover_background_book_detail" />


    <TextView
        android:id="@+id/book_author_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Author :"
        android:textColor="#044363"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/book_title_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/book_title_book_detail" />
    <TextView
        android:id="@+id/book_author_need_to_add_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="J. K. Rowling"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/book_author_book_detail"
        app:layout_constraintStart_toEndOf="@+id/book_author_book_detail"
        app:layout_constraintTop_toTopOf="@+id/book_author_book_detail" />


    <TextView
        android:id="@+id/isbn_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ISBN : "
        android:textColor="#044363"
        app:layout_constraintStart_toStartOf="@+id/book_author_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/book_author_book_detail" />
    <TextView
        android:id="@+id/isbn_need_to_add_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="978-0439358064"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/isbn_book_detail"
        app:layout_constraintStart_toEndOf="@+id/isbn_book_detail"
        app:layout_constraintTop_toTopOf="@+id/isbn_book_detail" />

    <TextView
        android:id="@+id/book_condition_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Condition : "
        android:textColor="#044363"
        app:layout_constraintStart_toStartOf="@+id/isbn_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/isbn_book_detail" />
    <TextView
        android:id="@+id/book_condition_need_to_add_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="totally new"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/book_condition_book_detail"
        app:layout_constraintStart_toEndOf="@+id/book_condition_book_detail"
        app:layout_constraintTop_toTopOf="@+id/book_condition_book_detail" />
    <TextView
        android:id="@+id/book_genre_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Genre : "
        android:textColor="#044363"
        app:layout_constraintStart_toStartOf="@+id/book_condition_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/book_condition_book_detail" />
    <TextView
        android:id="@+id/book_genre_need_to_add_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="fiction"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/book_genre_book_detail"
        app:layout_constraintStart_toEndOf="@+id/book_genre_book_detail"
        app:layout_constraintTop_toTopOf="@+id/book_genre_book_detail" />

    <TextView
        android:id="@+id/book_description_book_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Description :"
        android:textColor="#044363"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/book_genre_book_detail" />
    <TextView
        android:id="@+id/book_description_need_to_add_book_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:text='"Harry Potter and the Order of the Phoenix" is a part of the series where the plot becomes progressively complex and darker. It reveals more about Harry Potter and his friends, while introducing many new characters and storylines that lay the foundation for the series.'
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/book_description_book_detail"
        app:layout_constraintTop_toBottomOf="@+id/book_description_book_detail" />

    <Button
        android:id="@+id/button_request"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_background"
        android:text="Request Book"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>